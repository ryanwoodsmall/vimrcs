"set compatible
set nobackup
set noundofile
set ruler
set history=100
set ignorecase
set smartcase
set showcmd
set modeline
set modelines=5
set mouse=
set noautoindent
set nocindent
set nosmartindent
set indentexpr=
set visualbell
if has('syntax')
  syntax on
  try
    set t_Co=256
    colorscheme wombat256
  catch /^Vim\%((\a\+)\)\=:E/
    colorscheme desert
  endtry
end
if has('autocmd')
  filetype indent off
  autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
  autocmd BufNewFile,BufRead Jenkinsfile* set syntax=groovy
  autocmd BufNewFile,BufRead *.gradle set syntax=groovy
end
