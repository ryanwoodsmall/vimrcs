"set compatible
set nobackup
set noundofile
set ruler
set history=100
set ignorecase
set smartcase
set showcmd
set modeline
set modelines=5
set mouse=
set ttymouse=
set noautoindent
set nocindent
set nosmartindent
set indentexpr=
set visualbell
set laststatus=2
"set number
"set colorcolumn=80
if has('syntax')
  syntax on
  " this doesn't work - unconditionally sets colorscheme to wombat256
  " need a way to detect terminal color count/depth?
  try
    set t_Co=256
    colorscheme wombat256
  catch /^Vim\%((\a\+)\)\=:E/
    colorscheme desert
  endtry
end
if has('autocmd')
  filetype indent off
  autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
  autocmd BufNewFile,BufRead Jenkinsfile* set syntax=groovy
  autocmd BufNewFile,BufRead *.gradle set syntax=groovy
  autocmd BufNewFile,BufRead *.tfstate set syntax=json
  " http://vim.wikia.com/wiki/Fix_syntax_highlighting
  if has('syntax')
    autocmd BufEnter * :syntax sync fromstart
  end
end
